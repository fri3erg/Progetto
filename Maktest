CXX = g++
CFLAGS = -std=c++17

PROG = game
OBJ = $(SRC:.cc=.o)
LIBS = -lncurses

all: main.o Artifact.o Board.o Character.o Drawable.o Enemy.o Game.o Hero.o Projectile.o Room.o Time.o GeneralTemplate.o Chaser.o Drunk.o
	$(CXX) -o $(PROG) $(CFLAGS) main.o Artifact.o Board.o Character.o Drawable.o Enemy.o Game.o Hero.o Projectile.o Room.o Time.o GeneralTemplate.o Chaser.o Drunk.o $(LIBS)



clean:
	rm -rf *o $(PROG)
